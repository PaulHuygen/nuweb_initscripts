#!/bin/bash
# w2html -- make a html file from a nuweb file
# usage: w2html [filename]
#  [filename]: Name of the nuweb source file.
# 20110803 at 1346h: Generated by nuweb from a_webcom.w
echo "translate " $1 >w2html.log
nufil=$1
trunk=${1%%.*}
texfil=${trunk}.tex
auxfil=${trunk}.aux
oldaux=old.${trunk}.aux
indexfil=${trunk}.idx
oldindexfil=old.${trunk}.idx


while
  ! cmp -s $auxfil $oldaux 
do
  if [ -e $auxfil ]
  then
   cp $auxfil $oldaux
  fi
  nuweb -o -n $nufil
  latex $texfil
  makeindex $trunk
  bibtex $trunk
  htlatex $trunk
  
done
tex "\def\filename{{$trunk}{idx}{4dx}{ind}} \input idxmake.4ht"
makeindex -o $trunk.ind $trunk.4dx
bibtex $trunk
htlatex $trunk



rm $oldaux



